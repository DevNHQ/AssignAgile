<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextToolBar">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextInMainScreen_Bold">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorTextMain</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextInMainScreen_Normal">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorTextMain</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextInGocHoctapScreen_Bold">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorTextMain</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextInKetQua">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextInKetQua2">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextInKetQua3">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonInKetQua">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
